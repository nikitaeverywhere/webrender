    "express": "^4.18.2",
    "playwright-chromium": "^1.30.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node-fetch": "^2.6.2",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.9",
    "nyc": "^15.1.0",
    "ts-mocha": "^10.0.0",
